extends layout 

block content 
    h1 #{title}: #{genre.name}

    if allgenrebooks.length
        p #[strong Delete books before attempting to delete Genre]

        div(style='margin-left:20px;margin-top:20px')

            h4 Books
            dl 
            each book in allgenrebooks
                dl  
                    a(href=book.url) #{book.title}
                dd #{book.summary}
    
    else 
        p Do you really want to delete this Genre?

        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

            button.btn.btn-primary(type='submit') Delete

